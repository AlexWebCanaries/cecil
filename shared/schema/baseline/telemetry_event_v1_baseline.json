{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://schemas.llm-observer.dev/telemetry_event_v1.json",
  "title": "LLM Observer Telemetry Event",
  "type": "object",
  "required": [
    "schema_version",
    "event_id",
    "timestamp_ms",
    "provider",
    "model",
    "token_counts",
    "latency_ms",
    "prefix_hash_blocks",
    "prefix_similarity",
    "cache_breakers",
    "cache_boundary",
    "privacy"
  ],
  "properties": {
    "schema_version": { "const": "v1" },
    "event_id": { "type": "string" },
    "timestamp_ms": { "type": "integer" },
    "provider": { "type": "string", "enum": ["openai", "anthropic", "unknown"] },
    "model": { "type": "string" },
    "token_counts": {
      "type": "object",
      "required": ["prompt", "completion", "total"],
      "properties": {
        "prompt": { "type": "integer", "minimum": 0 },
        "completion": { "type": "integer", "minimum": 0 },
        "total": { "type": "integer", "minimum": 0 }
      },
      "additionalProperties": false
    },
    "latency_ms": { "type": "integer", "minimum": 0 },
    "cost_estimate_usd": { "type": ["number", "null"] },
    "cost_label": { "type": ["string", "null"] },
    "prefix_hash_blocks": {
      "type": "array",
      "items": { "type": "string" },
      "maxItems": 3
    },
    "prefix_similarity": { "type": "number", "minimum": 0, "maximum": 1 },
    "cache_savings_estimate_usd": { "type": "number", "minimum": 0 },
    "cache_breakers": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["category", "confidence", "hint"],
        "properties": {
          "category": { "type": "string" },
          "confidence": { "type": "number", "minimum": 0, "maximum": 1 },
          "hint": { "type": "string" }
        },
        "additionalProperties": false
      }
    },
    "cache_boundary": {
      "type": "object",
      "required": ["present", "position"],
      "properties": {
        "present": { "type": "boolean" },
        "position": { "type": ["integer", "null"], "minimum": 0 }
      },
      "additionalProperties": false
    },
    "privacy": {
      "type": "object",
      "required": ["mode", "redaction_mode", "snippet"],
      "properties": {
        "mode": { "type": "string" },
        "redaction_mode": { "type": "string" },
        "snippet": { "type": ["string", "null"] }
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": false
}
