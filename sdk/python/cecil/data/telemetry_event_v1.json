{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://schemas.cecil-sdk.dev/telemetry_event_v1.json",
  "title": "Cecil SDK Telemetry Event",
  "type": "object",
  "required": [
    "schema_version",
    "event_id",
    "timestamp_ms",
    "provider",
    "model",
    "token_counts",
    "latency_ms",
    "prefix_hash_blocks",
    "prefix_similarity",
    "cache_breakers",
    "cache_boundary",
    "privacy"
  ],
  "properties": {
    "schema_version": { "const": "v1" },
    "event_id": {
      "type": "string",
      "pattern": "^[0-9a-f]{8}-[0-9a-f]{4}-[1-5][0-9a-f]{3}-[89ab][0-9a-f]{3}-[0-9a-f]{12}$"
    },
    "timestamp_ms": { "type": "integer" },
    "provider": { "type": "string", "enum": ["openai", "anthropic", "unknown"] },
    "model": { "type": "string", "minLength": 1, "maxLength": 128 },
    "token_counts": {
      "type": "object",
      "required": ["prompt", "completion", "total"],
      "properties": {
        "prompt": { "type": "integer", "minimum": 0 },
        "completion": { "type": "integer", "minimum": 0 },
        "total": { "type": "integer", "minimum": 0 }
      },
      "additionalProperties": false
    },
    "latency_ms": { "type": "integer", "minimum": 0 },
    "cost_estimate_usd": { "type": ["number", "null"] },
    "cost_label": { "type": ["string", "null"], "maxLength": 64 },
    "pricing": {
      "type": "object",
      "required": ["version", "source"],
      "properties": {
        "version": { "type": "string", "maxLength": 64 },
        "source": { "type": "string", "maxLength": 512 }
      },
      "additionalProperties": false
    },
    "prefix_hash_blocks": {
      "type": "array",
      "items": { "type": "string", "pattern": "^[0-9a-f]{16}$" },
      "maxItems": 3
    },
    "prefix_similarity": { "type": "number", "minimum": 0, "maximum": 1 },
    "cache_savings_estimate_usd": { "type": "number", "minimum": 0 },
    "cache_savings": {
      "type": "object",
      "required": ["estimated_usd", "low_usd", "high_usd", "confidence"],
      "properties": {
        "estimated_usd": { "type": "number", "minimum": 0 },
        "low_usd": { "type": "number", "minimum": 0 },
        "high_usd": { "type": "number", "minimum": 0 },
        "confidence": { "type": "number", "minimum": 0, "maximum": 1 }
      },
      "additionalProperties": false
    },
    "cache_breakers": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["category", "confidence", "hint"],
        "properties": {
          "category": { "type": "string", "maxLength": 64 },
          "confidence": { "type": "number", "minimum": 0, "maximum": 1 },
          "hint": { "type": "string", "maxLength": 240 }
        },
        "additionalProperties": false
      }
    },
    "cache_boundary": {
      "type": "object",
      "required": ["present", "position"],
      "properties": {
        "present": { "type": "boolean" },
        "position": { "type": ["integer", "null"], "minimum": 0 }
      },
      "additionalProperties": false
    },
    "privacy": {
      "type": "object",
      "required": ["mode", "redaction_mode", "snippet"],
      "properties": {
        "mode": { "type": "string", "enum": ["hash_only"] },
        "redaction_mode": { "type": "string", "maxLength": 64 },
        "snippet": { "type": ["string", "null"], "maxLength": 120 }
      },
      "additionalProperties": false
    },
    "recommendation": {
      "type": "object",
      "required": ["top_cache_breakers", "potential_savings_range_usd", "confidence", "suggested_actions"],
      "properties": {
        "top_cache_breakers": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["category", "confidence", "hint"],
            "properties": {
              "category": { "type": "string", "maxLength": 64 },
              "confidence": { "type": "number", "minimum": 0, "maximum": 1 },
              "hint": { "type": "string", "maxLength": 240 }
            },
            "additionalProperties": false
          },
          "maxItems": 3
        },
        "potential_savings_range_usd": {
          "type": "object",
          "required": ["low", "high"],
          "properties": {
            "low": { "type": "number", "minimum": 0 },
            "high": { "type": "number", "minimum": 0 }
          },
          "additionalProperties": false
        },
        "confidence": { "type": "number", "minimum": 0, "maximum": 1 },
        "suggested_actions": {
          "type": "array",
          "items": { "type": "string", "maxLength": 240 },
          "maxItems": 3
        }
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": false
}
